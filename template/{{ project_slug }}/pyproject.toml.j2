[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ project_slug }}"
version = "0.1.0"
description = "{{ project_name }} â€” ML project scaffold (Prefect, typed schemas, Copier-updatable)"
readme = "README.md"
requires-python = ">={{ python_version }}"
dependencies = [
{% set base_deps = [
  "pydantic>=2",
  "pydantic-settings>=2",
  "pandas>=2.0.0",
  "pyyaml>=6"
] %}
{% set deps = base_deps + ([ ml_core_source ] if ml_core_source else []) %}
{% for dep in deps %}  "{{ dep }}"{% if not loop.last %},{% endif %}
{% endfor %}
]

[project.optional-dependencies]
dev = ["toml", "pytest", "pytest-cov", "ruff", "mypy", "pre-commit"]

[tool.uv]
index-strategy = "unsafe-best-match"

[tool.hatch.build.targets.wheel]
packages = ["src/{{ package_name }}"]
